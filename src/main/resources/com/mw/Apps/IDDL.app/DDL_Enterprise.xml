            <text size="6pt" x="5.575in" y="0.15in">(MONTH)  (DAY)  (YEAR)</text>
        </group>

        <group x="0in" y="0.30in" height="1.60in">
            <signature size="10pt" x="0.425in" y="0.075in" width="1.25in" height="0.485in" />
