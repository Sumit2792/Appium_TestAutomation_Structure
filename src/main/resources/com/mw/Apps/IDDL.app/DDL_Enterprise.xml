            <text size="5pt" x="3.75in" y="1.3in">------------------------------------------------------------------------------------------------</text>
            <text size="6pt" x="3.9in" y="1.375in">(HOME OPERATING TERMINAL ADDRESS)</text>
            <miles size="14pt" style="bold" x="3.6in" y="0.175in" />
            <text size="6pt" x="3.35in" y="0.275in">(TOTAL DISTANCE TRAVELED)</text>
            
            <text size="10pt" style="bold" x="0.117in" y="1.7in" width="0.7in" wraplines="YES" >Inspection Done:</text>
            <text size="13pt" x="0.87in" y="1.8in" width="7pt" height="7pt" boxed="YES" />
            <conditionaltext size="13pt" x="0.95in" y="1.8in" source="preIDDLInspection" name="Type" limitingvalue="Pre-trip">X</conditionaltext>
            <conditionaltext size="13pt" x="0.95in" y="1.8in" source="dailyIDDLInspection" name="Type" limitingvalue="Daily">X</conditionaltext>
            
        </group>
    
    <dailychart x="0.05in" y="2.0in" width="7.2in" height="1.9625in" inspections="YES" totalInDecimal="NO" />
